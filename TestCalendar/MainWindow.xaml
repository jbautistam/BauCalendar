<Window x:Class="TestCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCalendar"
        xmlns:calendar="clr-namespace:BauCalendar.Month;assembly=BauCalendar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<calendar:MonthView Grid.Row="0" Grid.Column="0" Height="200" Margin="5" />
		<calendar:YearView Grid.Row="0" Grid.Column="1" Date="2020-01-01" Rows="3" Columns="4"/>
	</Grid>
</Window>
